import { merge } from 'monocart-reporter';
import { globSync } from 'glob';

const run = async () => {
    const files = globSync('../raw-collection/**/report.json');

    console.log(`Found ${files.length} raw JSON files to merge`);
    files.forEach(f => console.log(' → ' + f));

    if (!files.length) {
        console.error('No JSON files found to merge!');
        process.exit(1);
    }

    try {
        await merge({
            files,
            output: '../merged-report/index.html', // ✅ This generates the HTML report directly
        });

        console.log('✅ Merged report written to ../merged-report/index.html');
    } catch (err) {
        console.error('❌ Merge failed:', err);
        process.exit(1);
    }
};

run();


# ✅ Fixed: Generates merged report directly
- name: Merge and generate final Monocart report
  run: node merge-monocart.mjs
  working-directory: ./Playwright-Automation



- name: Upload merged report
  uses: actions/upload-artifact@v4
  with:
    name: merged-report
    path: Playwright-Automation/merged-report
