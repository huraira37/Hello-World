import { merge } from 'monocart-reporter';

const run = async () => {
  try {
    await merge({
      files: ['../../all-artifacts/**/index.json'],
      output: './merged-report'
    });
    console.log('✅ Monocart report merged successfully.');
  } catch (error) {
    console.error('❌ Error merging Monocart reports:', error);
    process.exit(1);
  }
};

run();




- name: Merge Monocart reports using monocart-reporter
      run: node merge-monocart.js
      working-directory: ./Playwright-Automation
