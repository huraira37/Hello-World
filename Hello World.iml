public async additionalInfoValidation(additionalRunwayAlphaInfo: string, rideSharingSelect: string, rateStatus: string) {
    try {
        await expect(this.additionalPopUp).toBeVisible({ timeout: 5000 });

        await expect(this.additionalPopUp).toContainText("Additional Information Review Validation", { timeout: 30000 });

        await this.additionalRunwayAlphaInfo.selectOption(additionalRunwayAlphaInfo);
        this.logger.log(`Additional Runway Alpha Info selected: ${additionalRunwayAlphaInfo}`);

        await this.submitDecision.click();
        this.logger.log("Clicked on submit button");

        await this.page.waitForLoadState('domcontentloaded');

        await this.reRateButton.click();
        await expect(this.rateStatusValid).toContainText(rateStatus, { timeout: 20000 });
        this.logger.log("Validated the Rate status");

        await this.headerNext.click();
        this.logger.log("Clicked Next");

    } catch (error) {
        this.logger.log("Popup did not appear, proceeding without it.");

        await this.reRateButton.click();
        await expect(this.rateStatusValid).toContainText(rateStatus, { timeout: 20000 });
        this.logger.log("Validated Rate status without popup");

        await this.headerNext.click();
        this.logger.log("Clicked Next");
    }
}
