import { merge } from 'monocart-reporter';
import { globSync } from 'glob';

const run = async () => {
  try {
    const files = globSync('../all-artifacts/Monocart-*/index.json');

    if (files.length === 0) {
      console.error('❌ No index.json files found in Monocart-* folders.');
      process.exit(1);
    }

    await merge({
      files,
      output: '../merged-report'
    });

    console.log('✅ Monocart report merged successfully.');
  } catch (error) {
    console.error('❌ Error merging Monocart reports:', error);
    process.exit(1);
  }
};

run();
