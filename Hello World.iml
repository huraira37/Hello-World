import { merge } from 'monocart-reporter';
import { globSync } from 'glob';
import path from 'path';

const run = async () => {
  try {
    // ‚úÖ Find only valid index.json files from report folders
    const files = globSync('../all-artifacts/Monocart-*/index.json');

    console.log(`üß© Found ${files.length} Monocart index.json file(s)`);
    files.forEach(file => console.log(' ‚Üí ' + file));

    if (files.length === 0) {
      throw new Error('No valid index.json files found to merge.');
    }

    // ‚úÖ Merge these JSON files into one
    await merge({
      files,
      output: '../merged-report'
    });

    console.log('‚úÖ Merged Monocart report created at ../merged-report');
  } catch (error) {
    console.error('‚ùå Failed to merge Monocart reports:', error.message);
    process.exit(1);
  }
};

run();
