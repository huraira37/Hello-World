- name: Merge and generate final Monocart report
  run: node merge-monocart.mjs
  working-directory: ./Playwright-Automation

# üîç NEW DEBUG STEP TO INSERT HERE
- name: Debug: Show merged report files
  run: |
    echo "üìù Files in merged-report folder:"
    find Playwright-Automation/merged-report

- name: 'Debug: List merged report directory'
  run: |
    echo "Checking contents of Playwright-Automation/merged-report:"
    ls -R Playwright-Automation/merged-report || echo "merged-report folder not found"

- name: Upload merged report
  uses: actions/upload-artifact@v4
  with:
    name: merged-report
    path: Playwright-Automation/merged-report


