- name: Install Monocart CLI # ✅ FIXED
  run: npm install -g @monocart/cli

- name: Merge Monocart reports into one # ✅ FIXED
  run: |
    mkdir merged-results
    find ./all-artifacts -type f -name "result.json" -exec cp {} merged-results/ \;

    echo "Found result files:"
    ls -la merged-results

    npx monocart merge merged-results/*.json -o ./final-monocart-report
