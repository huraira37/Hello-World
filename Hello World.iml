public async validateRejectionReason(rejectionReasonText: string) {
  const page = this.page;

  // Click to open rating info
  await this.ratingInfo.click();

  // Wait until the rejection reason element appears and is visible
  await expect(this.rejectionReason).toBeVisible({ timeout: 10000 });

  // Validate the expected text
  await expect(this.rejectionReason).toHaveText(rejectionReasonText, { timeout: 10000 });

  this.logger.log("Rejection Reason is " + rejectionReasonText);

  // Click the done button
  await this.doneButton.click();
}

