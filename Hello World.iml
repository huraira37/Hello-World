import { merge } from 'monocart-reporter';
import { globSync } from 'glob';

const run = async () => {
  const files = globSync('../raw-collection/**/report.json');

  console.log(`Found ${files.length} raw JSON files to merge`);
  files.forEach(f => console.log(' → ' + f));

  if (!files.length) {
    console.error('No JSON files found to merge!');
    process.exit(1);
  }

  const outputPath = './merged-report'; // ✅ This ensures it goes inside Playwright-Automation

  try {
    await merge({
      files,
      output: outputPath
    });
    console.log(`✅ Merged report written to ${outputPath}`);
  } catch (err) {
    console.error('[❌] Merge failed:', err);
    process.exit(1);
  }
};

run();
