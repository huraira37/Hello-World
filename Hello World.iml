public async validateOperatorOptions_cf1(operatorTypeValidation: string) {
    const page = this.page;

    // Locate the select element and its option
    const optionLocator = page.locator(`select option`, { hasText: operatorTypeValidation });

    // Wait for the option to appear in DOM
    await optionLocator.waitFor({ state: "attached", timeout: 15000 });

    // Get the HTML of the option to verify attributes manually (for debug)
    const optionHtml = await optionLocator.evaluate(el => el.outerHTML);
    console.log(`Option HTML: ${optionHtml}`);

    // Check if the option is disabled
    const isDisabled = await optionLocator.isDisabled();
    console.log(`Dropdown option '${operatorTypeValidation}' disabled state:`, isDisabled);

    // Assertion
    expect(isDisabled).toBeTruthy(); // This will fail if not disabled
}
