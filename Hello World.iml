import { merge } from 'monocart-reporter';
import { globSync } from 'glob';

const run = async () => {
  try {
    // ‚úÖ Match the entire report directories instead of index.json files
    const folders = globSync('../all-artifacts/Monocart-*');

    console.log(`üß© Found ${folders.length} report folder(s) to merge`);
    folders.forEach(f => console.log(' ‚Üí ' + f));

    if (folders.length === 0) {
      throw new Error('No Monocart report folders found.');
    }

    await merge({
      entries: folders,
      output: '../merged-report'
    });

    console.log('‚úÖ Merged report created at ../merged-report');
  } catch (error) {
    console.error('‚ùå Merge failed:', error);
    process.exit(1);
  }
};

run();



