import { merge } from 'monocart-reporter';
import { globSync } from 'glob';

const run = async () => {
  const files = globSync('../raw-collection/**/index.json');

  console.log(`üß© Found ${files.length} raw JSON files to merge`);
  files.forEach(f => console.log(' ‚Üí ' + f));

  if (!files.length) {
    console.error('‚ùå No JSON files found to merge!');
    process.exit(1);
  }

  const outputPath = '../merged-results.json';

  try {
    await merge({
      files,
      output: outputPath
    });

    console.log(`‚úÖ Merged file created: ${outputPath}`);
  } catch (err) {
    console.error('‚ùå Merge failed:', err);
    process.exit(1);
  }
};

run();

