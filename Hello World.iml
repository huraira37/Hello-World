  aggregate:
    name: Aggregate All Artifacts
    runs-on: ubuntu-latest
    needs: test
    if: always()
    steps:
    - name: Download all artifacts
      uses: actions/download-artifact@v4
      with:
        path: ./all-artifacts  # âœ… unchanged

    - name: List all downloaded files
      run: |
        echo "Downloaded files:"
        find ./all-artifacts

    - name: Install Monocart CLI # ðŸ†• NEW STEP
      run: npm install -g @monocart/collector

    - name: Merge Monocart reports into one # ðŸ†• NEW STEP
      run: |
        mkdir merged-results
        find ./all-artifacts -type f -name "result.json" -exec cp {} merged-results/ \;

        echo "Found result files:"
        ls -la merged-results

        npx monocart-collector merge merged-results/*.json -o ./final-monocart-report

    - name: Upload unified Monocart report # ðŸ†• NEW STEP
      uses: actions/upload-artifact@v4
      with:
        name: Unified-Monocart-Report
        path: ./final-monocart-report
        retention-days: 15

    - name: Zip all results # âœ… unchanged
      run: |
        zip -r Final-Report.zip ./all-artifacts

    - name: Upload Final Combined Report ZIP # âœ… unchanged
      uses: actions/upload-artifact@v4
      with:
        name: Final-Combined-Report
        path: Final-Report.zip
        retention-days: 15
