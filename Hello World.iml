import fs from 'fs';
import path from 'path';
import { globSync } from 'glob';

const files = globSync('../all-artifacts/Monocart-*/index.json');

console.log(`🧪 Found ${files.length} Monocart index.json file(s)`);

for (const file of files) {
  console.log('\n========================');
  console.log('🔍 Inspecting:', file);

  try {
    const content = JSON.parse(fs.readFileSync(file, 'utf-8'));

    if (Array.isArray(content)) {
      console.log('📄 JSON is an array with length:', content.length);
    } else if (typeof content === 'object') {
      console.log('📄 JSON is an object with keys:', Object.keys(content));
    } else {
      console.log('⚠️ JSON is not valid or unexpected structure.');
    }

  } catch (e) {
    console.log('❌ Failed to parse JSON:', e.message);
  }
}


